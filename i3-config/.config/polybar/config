[module/memory_por]
type = custom/script 
exec = free -h | awk '/^Mem.:/ {print $3 "/" $2}' 
#exec-if = free -h | awk '/^Mem.:/ {print $3 "/" $2}'
interval = 2
format-prefix = ""
format-prefix-foreground = #00FF07
click-left= urxvt -geometry 20x12+880+520 -e /bin/bash -l -c "ps axch -o cmd:15,%mem --sort=-%mem | head; sleep 3" &

